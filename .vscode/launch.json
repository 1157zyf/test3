	"version": "0.2.0",
	"configurations": [
		{
			// 可采用GCC或者Clang编译器
			"name": "GDB IR",
			"type": "cppdbg",
			"request": "launch",
			"program": "${workspaceFolder}/cmake-build-debug/calculator",
			"args": ["-S", "-I", "tests/test1.txt"],
			"stopAtEntry": false,
			"cwd": "${workspaceFolder}",
			"environment": [],
			"externalConsole": false,
			"MIMode": "gdb",
			"setupCommands": [
				{
					"description": "为 gdb 启用整齐打印",
					"text": "-enable-pretty-printing",
					"ignoreFailures": true
				},
				{
					"description": "将反汇编风格设置为 Intel",
					"text": "-gdb-set disassembly-flavor intel",
					"ignoreFailures": true
				}
			]
		},
		{
			// 可采用GCC或者Clang编译器
			"name": "GDB Calculation",
			"type": "cppdbg",
			"request": "launch",
			"program": "${workspaceFolder}/cmake-build-debug/calculator",
			"args": ["-R", "tests/test1.txt"],
			"stopAtEntry": false,
			"cwd": "${workspaceFolder}",
			"environment": [],
			"externalConsole": false,
			"MIMode": "gdb",
			"setupCommands": [
				{
					"description": "为 gdb 启用整齐打印",
					"text": "-enable-pretty-printing",
					"ignoreFailures": true
				},
				{
					"description": "将反汇编风格设置为 Intel",
					"text": "-gdb-set disassembly-flavor intel",
					"ignoreFailures": true
				}
			]
		},
		{
			// 可采用GCC或者Clang编译器
			"name": "GDB AST",
			"type": "cppdbg",
			"request": "launch",
			"program": "${workspaceFolder}/cmake-build-debug/calculator",
			"args": ["-S", "-A", "-a", "tests/test3.txt"],
			"stopAtEntry": false,
			"cwd": "${workspaceFolder}",
