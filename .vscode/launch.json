		{
			// 可采用GCC或者Clang编译器
			"name": "GDB ARM32",
			"type": "cppdbg",
			"request": "launch",
			"program": "${workspaceFolder}/cmake-build-debug/calculator",
			"args": ["-S", "tests/test3.txt"],
			"stopAtEntry": false,
			"cwd": "${workspaceFolder}",
			"environment": [],
			"externalConsole": false,
			"MIMode": "gdb",
