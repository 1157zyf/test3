		{
			// MacOS平台专用lldb调试，请注意不能用Mac不要用GDB调试
			"name": "LLDB Mac Calculation",
			"type": "cppdbg",
			"request": "launch",
			"program": "${workspaceFolder}/cmake-build-debug/calculator",
			"args": ["-S", "-I", "-D", "tests/test1.txt"],
			"stopAtEntry": false,
			"cwd": "${workspaceFolder}",
			"environment": [],
			"externalConsole": false,
			"MIMode": "lldb"
		}
