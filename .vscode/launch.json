{
	// Use IntelliSense to learn about possible attributes.
	// Hover to view descriptions of existing attributes.
	// For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
	"version": "0.2.0",
	"configurations": [
		{
			"type": "antlr-debug",
			"request": "launch",
			// 调试的名称，可修改
			"name": "Debug Calculator Antlr4 Grammar",
			// 文法解析的输入文件
			"input": "tests/test1.txt",
			// 分析树可视化，也就是具体语法树AST
			"visualParseTree": true,
			// 文本输出分析树
			"printParseTree": false,
			// 语法的开始符号
			"startRule": "compileUnit",
			// 描述语法的g4文件
			"grammar": "${workspaceFolder}/frontend/antlr4/Calculator.g4"
		},
		{
			// 可采用GCC或者Clang编译器
			"name": "GDB IR",
			"type": "cppdbg",
			"request": "launch",
			"program": "${workspaceFolder}/cmake-build-debug/calculator",
			"args": ["-S", "-I", "tests/test1.txt"],
			// 程序的入口（main函数的入口）是否停止
			"stopAtEntry": true,
			"cwd": "${workspaceFolder}",
			"environment": [],
			"externalConsole": false,
			"MIMode": "gdb",
			"setupCommands": [
				{
					"description": "Enable pretty-printing for gdb",
					"text": "-enable-pretty-printing",
					"ignoreFailures": true
				},
				{
					"description": "Set Disassembly Flavor to Intel",
					"text": "-gdb-set disassembly-flavor intel",
					"ignoreFailures": true
				}
			],
			// 不需要编译时可注释掉
			"preLaunchTask": "CMake: build"
		},
		{
			// 可采用GCC或者Clang编译器
			"name": "GDB Calculation",
			"type": "cppdbg",
			"request": "launch",
			"program": "${workspaceFolder}/cmake-build-debug/calculator",
			"args": ["-R", "tests/test1.txt"],
			// 程序的入口（main函数的入口）是否停止
			"stopAtEntry": true,
			"cwd": "${workspaceFolder}",
			"environment": [],
			"externalConsole": false,
			"MIMode": "gdb",
			"setupCommands": [
				{
					"description": "Enable pretty-printing for gdb",
					"text": "-enable-pretty-printing",
					"ignoreFailures": true
				},
				{
					"description": "Set Disassembly Flavor to Intel",
					"text": "-gdb-set disassembly-flavor intel",
					"ignoreFailures": true
				}
			],
			// 不需要编译时可注释掉
			"preLaunchTask": "CMake: build"
		},
		{
			// 可采用GCC或者Clang编译器
			"name": "GDB AST",
			"type": "cppdbg",
			"request": "launch",
			"program": "${workspaceFolder}/cmake-build-debug/calculator",
			"args": ["-S", "-A", "-a", "tests/test3.txt"],
			// 程序的入口（main函数的入口）是否停止
			"stopAtEntry": true,
			"cwd": "${workspaceFolder}",
			"environment": [],
			"externalConsole": false,
			"MIMode": "gdb",
			"setupCommands": [
				{
					"description": "Enable pretty-printing for gdb",
					"text": "-enable-pretty-printing",
					"ignoreFailures": true
				},
				{
					"description": "Set Disassembly Flavor to Intel",
					"text": "-gdb-set disassembly-flavor intel",
					"ignoreFailures": true
				}
			],
			// 不需要编译时可注释掉
			"preLaunchTask": "CMake: build"
		},
		{
			// 可采用GCC或者Clang编译器
			"name": "GDB ARM32",
			"type": "cppdbg",
			"request": "launch",
			"program": "${workspaceFolder}/cmake-build-debug/calculator",
			"args": ["-S", "tests/test3.txt"],
			// 程序的入口（main函数的入口）是否停止
			"stopAtEntry": true,
			"cwd": "${workspaceFolder}",
			"environment": [],
			"externalConsole": false,
			"MIMode": "gdb",
			"setupCommands": [
				{
					"description": "Enable pretty-printing for gdb",
					"text": "-enable-pretty-printing",
					"ignoreFailures": true
				},
				{
					"description": "Set Disassembly Flavor to Intel",
					"text": "-gdb-set disassembly-flavor intel",
					"ignoreFailures": true
				}
			],
			// 不需要编译时可注释掉
			"preLaunchTask": "CMake: build"
		},
		{
			// MacOS平台专用lldb调试，请注意不能用Mac不要用GDB调试
			"name": "LLDB Mac Calculation",
			"type": "cppdbg",
			"request": "launch",
			"program": "${workspaceFolder}/cmake-build-debug/calculator",
			"args": ["-S", "-I", "-D", "tests/test1.txt"],
			// 程序的入口（main函数的入口）是否停止
			"stopAtEntry": true,
			"cwd": "${workspaceFolder}",
			"environment": [],
			"externalConsole": false,
			"MIMode": "lldb",
			// 不需要编译时可注释掉
			"preLaunchTask": "CMake: build"
		}
	]
}
